package cs.niu.edu.messenger.resources;

import java.util.List;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import cs.niu.edu.messenger.model.Message;
import cs.niu.edu.messenger.model.Profile;
import cs.niu.edu.messenger.service.ProfileService;

@Consumes(MediaType.APPLICATION_JSON)
@Produces(MediaType.APPLICATION_JSON)
public class ProfileResource {
	private ProfileService ps=new ProfileService();
	@GET
	public List<Profile> getProfiles(){
		return ps.getAllProfiles();
	}
	
	@GET
	@Path("/{messageId}")
	public Message getMessage(@PathParam("messageId") Long messageId){
		return ms.getMessage(messageId);
	}
	
	@POST
	public Profile setProfile(Profile profile){
		return ps.addProfile(profile);
	}
	@PUT
}
